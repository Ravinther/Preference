<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<PreferenceCategory android:title="Settings">
    <EditTextPreference android:title="Password"
        android:summary="Set Your Password"
        android:key="prefuserpassword">
    </EditTextPreference>
</PreferenceCategory>
    <PreferenceCategory>
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="preflockscreen"
            android:summary="Lock the screen without password"
            android:title="Screen Lock"></CheckBoxPreference>
    </PreferenceCategory>
    <PreferenceCategory>
        <ListPreference>
            android:key="prefUpdateFrequency"
            android:title="Reminder for Updation"
            android:summary="Set Update Reminder Frequency"
            android:entries="@array/updateFrequency"
            android:entryValues="@array/updateFrequencyValues"
        </ListPreference>
    </PreferenceCategory>
</PreferenceScreen>